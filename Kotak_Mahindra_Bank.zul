<!--Kotak_Mahindra_Bank.zul-->
<zk>
    <window title="Loan Information" border="normal" width="300px" height="310px" style=" position: absolute; top: 50%; left: 50%; border-radius:5px; transform: translate(-50%, -50%);">
        <label value="Kotak_Mahindra_Bank" style="font-weight:bold;text-align:center; display:block"/>
        <separator/>
        <grid>
            <columns>
                <column label="Loan Type"/>
                <column label="Interest Rate"/>
            </columns>
            <rows>
                <row>
                    <label value="Mortage Loan"/>
                    <label value="9%"/>
                </row>
                <row>
                    <label value="Personal Loan"/>
                    <label value="10%"/>
                </row>
                <row>
                    <label value="Fintech Loan"/>
                    <label value="11%"/>
                </row>
                <row>
                    <label value="Secured Loan"/>
                    <label value="7%"/>
                </row>
                <row>
                    <label value="Auto Loan"/>
                    <label value="4%"/>
                </row>
            </rows>
        </grid>
        <separator/>
        <label value="Best Loan of Kotak Mahindra Bank is 'Mortage Loan'" style="color:blue;"/>
    </window>
</zk>